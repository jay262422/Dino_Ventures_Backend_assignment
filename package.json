{
  "name": "dino-ventures-wallet-service",
  "version": "1.0.0",
  "description": "Internal Wallet Service - Dino Ventures Backend Assignment",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "migrate": "node -r ts-node/register ./src/db/migrate.ts",
    "seed": "node -r ts-node/register ./src/db/seed.ts",
    "db:setup": "npm run migrate && npm run seed",
    "deploy:start": "node dist/db/migrate.js && node dist/db/seed.js && npm start"
  },
  "keywords": ["wallet", "ledger", "nodejs"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
